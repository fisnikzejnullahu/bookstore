@using BookStore.Areas.Admin.Utils
@using BookStore.Models.Comments
@using Microsoft.AspNetCore.Identity
@model BookStore.Areas.Admin.Models.CommentDetailsViewModel

@{
    ViewBag.Title = "title";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .dashboard-wrapper > .container-fluid {
        width: 100%;
        padding-right: 0px !important;
        padding-left: 15px !important;
        margin-right: auto !important;
        margin-left: auto !important;
        padding-top: 0px !important;
    }
</style>

<partial name="_BookAsidePartial" model="@Model.Comment.Book"/>
<div class="main-content container-fluid p-0">
    <div class="email-inbox-header">
        <div class="row">
            <div class="col-lg-6">
                <div class="email-title"><span class="icon"></span>Comment by: @Model.Comment.CreatedByUser.UserName</div>
            </div>

        </div>
    </div>
    <div class="email-filters">
        <div class="email-filters-left">
            <div class="btn-group">
                <a asp-area="Admin" asp-controller="Comments" asp-action="Delete"
                   asp-route-commentId="@Model.Comment.Id" asp-route-bookId="@Model.Comment.Book.Id" class="btn btn-light" 
                   onclick="return confirm('Are you sure you want to delete this item?');">Delete Comment</a>
            </div>
        </div>
    </div>
    <div class="email-body">
        <h3>Comment Edit History:</h3>
        @foreach (CommentHistory ch in Model.Comment.CommentHistory)
        {
            <blockquote class="blockquote">
                <p class="mb-0">@ch.Message</p>
                <footer class="blockquote-footer">At <cite>@ch.EditedTime</cite></footer>
            </blockquote>

            <hr />
        }

        
    </div>

</div>