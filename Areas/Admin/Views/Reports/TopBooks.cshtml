@using BookStore.Areas.Admin.Models.Dashboard
@model List<TopSoldBookItem>
@{
    ViewData["Title"] = "View";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@if (Model.Count > 0)
{
<h2 class="mt-2 mb-4">These are top (5) books that have been sold mostly!</h2>
    <div class="row">
        <!-- product sales  -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <div class="col-xl-12 col-lg-12 col-md-6 col-sm-12 col-12">
            <!-- ============================================================== -->
            <!-- top perfomimg  -->
            <!-- ============================================================== -->
            <div class="card">
                <h5 class="card-header">Top Performing Books in sales</h5>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table no-wrap p-table">
                            <thead class="bg-light">
                                <tr class="border-0">
                                    <th class="border-0">Book</th>
                                    <th class="border-0">Sales</th>
                                    <th class="border-0">Revenue</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderByDescending(b => b.Quantity))
                                {
                                    <tr>
                                        <td>@item.Book.Title</td>
                                        <td>@item.Quantity</td>
                                        <td>$@(item.Book.Price * @item.Quantity)</td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- end top perfomimg  -->
            <!-- ============================================================== -->
        </div>
    </div>

}
else {
    <h2 class="mt-2 mb-4">No order found!</h2>
}
